@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/arch.css" rel="stylesheet" />

<div class="container shadow p-5 col-lg-6">
    <section role="main" class="content-body">
        <!-- start: page -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <header class="card-header d-flex align-items-center justify-content-between">
                        <h2 class="card-title">Add New FeeGroup</h2>
                    </header>
                    <br />
                    <div class="fs-title">Add Fee Group</div>
                    <form id="afhform" method="post">
                                    <div class="row">
                                        <div class="col-lg-12 col-xl-12 mt-3">
                                            <label class="mb-2">FeeGroup Name</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" @* asp-for="FeeGroupName" *@ placeholder="Enter the FeeGroup" />
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <br />
                                        <div>
                                            <button type="submit" class="login">Save</button>
                                            <button type="submit" class="login">Update</button>
                                            <button type="submit" class="login">Delete</button>
                                        </div>
                                    </div>
                    </form>
                    <div class="row">
                        <div class="col-lg-12 col-xl-12 mt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">FeeGroupName</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>Class 1</td>
                                    </tr>
                                    <tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end: page -->
    </section>
</div>

