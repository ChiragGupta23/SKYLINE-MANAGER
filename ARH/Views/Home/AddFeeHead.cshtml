@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/arch.css" rel="stylesheet" />

<div class="container shadow p-5 col-lg-6">
    <section role="main" class="content-body">
        <!-- start: page -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <header class="card-header d-flex align-items-center justify-content-between">
                        <h2 class="card-title">Add Fee Head</h2>
                    </header>
                    <br />
                    <div class="fs-title">Fee Heads</div>
                    <form id="afhform" method="post">
                                    <!-- New Line Div -->
                                    <div class="row">
                                        <div class="col-lg-12 col-xl-12 mt-3">
                                            <label class="mb-2">FeeHead Name</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" @* asp-for="New_FeeHeadName" *@ placeholder="Enter FeeHead" />
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <br />
                                        <div>
                                            <button type="submit" class="login">Save</button>
                                            <button type="submit" class="login">Update</button>
                                            <button type="submit" class="login">Delete</button>

                                        </div>
                                    </div>
                    </form>
                    <div class="row">
                        <div class="col-lg-12 col-xl-12 mt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col-4">Id</th>
                                        <th scope="col-4">FeeHeader</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @* @foreach (var item in Model.FeeHeadList)
                                    {
                                        <tr>
                                            <td width="20%">
                                                @item.ID
                                            </td>
                                            <td width="80%">
                                                @item.FeeHeadName
                                            </td>
                                        </tr>
                                    } *@
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end: page -->
    </section>
</div>
