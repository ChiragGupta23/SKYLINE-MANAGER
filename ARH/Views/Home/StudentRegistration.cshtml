@{
    ViewData["Title"] = "Home Page";
}

<link href="~/css/arch.css" rel="stylesheet" />
<div>
    <section role="main" class="content-body">
        <!-- start: page -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <header class="card-header d-flex align-items-center justify-content-between">
                        <h2 class="card-title">Student Registration</h2>
                        @* <div class="d-flex align-items-center">
                            &nbsp; &nbsp;
                            <a class="btn btn-default" href="#"><i class="fa fa-print"></i></a>
                        </div> *@
                    </header>

                    <form id="srform">
                        <!-- Step 1 Form Starts -->
                        <fieldset>
                            <div class="form-card">
                                <!-- Step 1 Form Starts -->
                                <div class="Form_inut_here">

                                    <!-- New Line Div -->
                                    <div class="row">
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Admission Date</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Admission Date">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Class</label>
                                            <div class="input-group">
                                                <select class="form-select" aria-label="Class">
                                                    <option selected>-select-</option>
                                                    <option value="1">One</option>
                                                    <option value="2">Two</option>
                                                    <option value="3">Three</option>
                                                </select>

                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Student Name</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Student Name">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Mother's Name</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Mother's Name">
                                            </div>
                                        </div>
                                    </div>

                                    <!-- New Line Div -->
                                    <div class="row">
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Father's Name</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Father's Name">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Date Of Birthday</label>
                                            <div class="input-group">
                                                <input type="date" class="form-control" required="" placeholder="Date Of Birthday">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Gender</label>
                                            <div class="input-group">
                                                <select class="form-select" aria-label="Gender">
                                                    <option selected>-select-</option>
                                                    <option value="1">Male</option>
                                                    <option value="2">Female</option>
                                                    <option value="3">Other</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Blood Group</label>
                                            <div class="input-group">
                                                <select class="form-select" aria-label="Blood Group">
                                                    <option selected>-Select-</option>
                                                    <option value="1">A</option>
                                                    <option value="2">A+</option>
                                                    <option value="3">B</option>
                                                    <option value="4">B+</option>
                                                    <option value="5">O</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- New Line Div -->

                                    <div class="row">
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Religion</label>
                                            <div class="input-group">
                                                <select class="form-select" aria-label="Religion">
                                                    <option selected>-Select-</option>
                                                    <option value="1">Hindu</option>
                                                    <option value="2">Muslims</option>
                                                    <option value="3">Sikh</option>

                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Category</label>
                                            <div class="input-group">
                                                <select class="form-select" aria-label="Category">
                                                    <option selected>-Select-</option>
                                                    <option value="1">Category1</option>
                                                    <option value="2">Category2</option>
                                                    <option value="3">Category3</option>

                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Caste</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Caste">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Nationality</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Nationality" value="Indian" disabled="">
                                            </div>
                                        </div>
                                    </div>

                                    <!-- New Line Div -->

                                    <div class="row">
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Adhar No.</label>
                                            <div class="input-group">
                                                <input type="number" class="form-control" required="" placeholder="Adhar No.">

                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Adhar File.</label>
                                            <div class="input-group">
                                                <input type="file" class="form-control" required="" placeholder="Adhar No.">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Birth Certificate File</label>
                                            <div class="input-group">
                                                <input type="file" class="form-control" required="" placeholder="Date of brith">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Email</label>
                                            <div class="input-group">
                                                <input type="email" class="form-control" required="" placeholder="Email">
                                            </div>
                                        </div>
                                    </div>

                                    <!-- New Line Div-->

                                    <div class="row">
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Phone Number</label>
                                            <div class="input-group">
                                                <input type="number" class="form-control" required="" placeholder="Phone Number">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Address</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Address">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">State</label>
                                            <div class="input-group">

                                                <select class="form-select" aria-label="State">
                                                    <option selected>-Select-</option>
                                                    <option value="1">Delhi</option>
                                                    <option value="2">Uttar Pradesh</option>
                                                    <option value="3">Uttrakhand</option>

                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">City</label>
                                            <div class="input-group">
                                                <select class="form-select" aria-label="City">
                                                    <option selected>-Select-</option>
                                                    <option value="1">Noida</option>
                                                    <option value="2">Gaziabad</option>
                                                    <option value="3">Gurgaon</option>

                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- New Line Div-->

                                    <div class="row">
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Pincode</label>
                                            <div class="input-group">
                                                <input type="number" class="form-control" required="" placeholder="Pincode">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Student Type</label>
                                            <div class="input-group">
                                                <select class="form-select" aria-label="Student Type">
                                                    <option selected>-Select-</option>
                                                    <option value="1">Old</option>
                                                    <option value="2">New</option>

                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Session</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Session">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Student Status</label>
                                            <div class="input-group">
                                                <select class="form-select" aria-label="Staff Child">
                                                    <option selected>-Select-</option>
                                                    <option value="1">Normal</option>

                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- New Line Div-->

                                    <div class="row">

                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Staff Child</label>
                                            <div class="input-group">
                                                <select class="form-select" aria-label="Staff Child">
                                                    <option selected>-Select-</option>
                                                    <option value="1">Yes</option>
                                                    <option value="2">No</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Transport Status</label>
                                            <div class="input-group">
                                                <select class="form-select" aria-label="Staff Child">
                                                    <option selected>-Select-</option>
                                                    <option value="1">Yes</option>
                                                    <option value="2">No</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Allotconcession To Student</label><br />
                                            <input class="form-check-input" type="checkbox" value="" id="">
                                        </div>
                                        @* <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Allot Transport To Student</label><br />
                                            <input class="form-check-input" type="checkbox" value="" id="">
                                        </div> *@
                                        <div class="col-lg-12 col-xl-12 mb-2">
                                            <div class="form-group row align-items-center">
                                                <div class="col-lg-7 col-xl-6">
                                                    <div class="checkbox">
                                                        <label class="my-2">
                                                            <input name="Transport"
                                                                   type="checkbox" value=""
                                                                   data-bs-toggle="collapse"
                                                                   data-bs-target=".allot_transport">
                                                            Allot Transport
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="allot_transport collapse">
                                                <div class="form-group row align-items-center">
                                                    <div class="col-lg-3 col-xl-3 mt-3">
                                                        <label class="mb-2">Select Route</label>
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" required="" placeholder="Select Route">
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3 col-xl-3 mt-3">
                                                        <label class="mb-2">Route Fee</label>
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" required="" placeholder="Route Fee" disabled>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3 col-xl-3 mt-3">
                                                        <label class="mb-2">Select Month</label>
                                                        <div class="input-group">
                                                            <input type="text" class="form-control" required="" placeholder="Month">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- New Line Div-->
                                    <br />
                                    <div class="fs-title">Father Information</div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Father's Profession</label>
                                            <div class="input-group">
                                                <input type="date" class="form-control" required="" placeholder="Father's Profession">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Father Designation</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Father Designation">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Father Office Address</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Father Office Address">
                                            </div>
                                        </div>

                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Father Email ID</label>
                                            <div class="input-group">
                                                <input type="email" class="form-control" required="" placeholder="Father Email ID">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Father MobileNo</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Father MobileNo">
                                            </div>
                                        </div>
                                    </div>

                                    <!-- New Line Div-->
                                    <br />
                                    <div class="fs-title">Mother Information</div>
                                    <hr />
                                    <div class="row">
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Mother Profession</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Mother Profession">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Mother Designation</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Mother Designation">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Mother Office Address</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Mother Office Address">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Mother Email ID</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Mother Email ID">
                                            </div>
                                        </div>
                                        <div class="col-lg-3 col-xl-3 mt-3">
                                            <label class="mb-2">Mother MobileNo</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" required="" placeholder="Mother MobileNo">
                                            </div>
                                        </div>

                                    </div>

                                    <br />
                                    <div>
                                       <input type="button" name="save" class="login" value="Save & Print" />
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <!-- end: page -->
    </section>
</div>
