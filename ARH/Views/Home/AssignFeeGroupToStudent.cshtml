@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/arch.css" rel="stylesheet" />

<div class="container shadow p-5 col-lg-6">
    <section role="main" class="content-body">
        <!-- start: page -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <header class="card-header d-flex align-items-center justify-content-between">
                        <h2 class="card-title">Assign FeeGroup To Student</h2>

                    </header>

                    <form id="afhform" method="post">
                        <div class="row">
                            <div class="col-lg-12 col-xl-12 mt-3">
                                <label class="mb-2">Year Of Session</label>
                                <div class="input-group">
                                    <select class="form-select" aria-label="Class">
                                        <option selected>-select-</option>
                                        <option value="1">2023-2024</option>
                                        <option value="2">2024-2025</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-12 mt-3">
                                <label class="mb-2">Select Class</label>
                                <div class="input-group">
                                    <select class="form-select" aria-label="Class">
                                        <option selected>-select-</option>
                                        <option value="1">I</option>
                                        <option value="2">II</option>
                                        <option value="2">III</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-12 mt-3">
                                <label class="mb-2">Select FeeGroup</label>
                                <div class="input-group">
                                    <select class="form-select" aria-label="Class">
                                        <option selected>-select-</option>
                                        <option value="1">FeeGroup-I</option>
                                        <option value="2">FeeGroup-II</option>
                                        <option value="2">FeeGroup-III</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div>
                            <br />
                            <div>
                                <button type="submit" class="login">Assign Fee Group</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- end: page -->
    </section>
</div>

