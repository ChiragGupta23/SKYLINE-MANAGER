@{
    ViewData["Title"] = "Home Page";
}

<link href="~/css/arch.css" rel="stylesheet" />
<div class="container shadow p-5 col-lg-6">
    <section role="main" class="content-body">
        <!-- start: page -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <header class="card-header d-flex align-items-center justify-content-between">
                        <h2 class="card-title">Month Wise Income</h2>
                    </header>
                    <br />
                    <div class="fs-title">Monthly Income</div>
                    <form id="afhform" method="post">

                        <div class="row">
                            <div class="col-lg-12 col-xl-12 mt-3">
                                <label class="mb-2">Select Month</label>
                                <div class="input-group">
                                    <input type="Month" class="form-control" placeholder="Select Month" />
                                </div>
                                <br />
                                <div class="input-group">
                                    <input type="text" class="form-control" required="" placeholder="Monthly Income" disabled>
                                </div>
                            </div>                          
                        </div>
                        <br />
                        <div>
                            <button type="submit" class="login">Get Monthly Income</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- end: page -->
