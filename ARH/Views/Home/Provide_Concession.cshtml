@{
    ViewData["Title"] = "Home Page";
}
<script>
    // Function to display the popup message
    function displayPopup() {
        alert("Concession assigned successfully!");
    }

    // Add event listener to the first "Provide Concession" button
    window.onload = function () {
        var percentConcessionButton = document.getElementById("percentConcessionButton");
        percentConcessionButton.addEventListener("click", displayPopup);

        var rupeesConcessionButton = document.getElementById("rupeesConcessionButton");
        rupeesConcessionButton.addEventListener("click", displayPopup);

        var fullYearConcessionButton = document.getElementById("fullYearConcessionButton");
        fullYearConcessionButton.addEventListener("click", displayPopup);
    };
</script>


