@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/arch.css" rel="stylesheet" />
<style>
    .btn {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 25px;
        height: 25px;
        padding: 0;
        font-size: 14px;
    }
</style>

<div class="container shadow p-5 col-lg-6">
    <section role="main" class="content-body">
        <!-- start: page -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <header class="card-header d-flex align-items-center justify-content-between">
                        <h2 class="card-title">Assign FeeAmount To FeeGroup</h2>
                    </header>
                    <br />
                    <form id="afhform" method="post">
                        <div class="row">
                            <div class="col-lg-12 col-xl-12 mt-3">
                                <label class="mb-2">Select FeeGroup</label>
                                <div class="input-group">
                                    <select class="form-select" aria-label="Class">
                                        <option selected>-Select-</option>
                                        <option value="1">FeeGroup-I</option>
                                        <option value="2">FeeGroup-II</option>
                                        <option value="2">FeeGroup-III</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-12 col-xl-12 mt-3">
                                <label class="mb-2">Select Month</label>
                                <div class="input-group">
                                    <input type="month" class="form-control" @* asp-for="SelectMonth" *@ placeholder="Select the Month" />
                                </div>
                            </div>
                        </div>
                        <div>
                            <br />
                            <div>
                                <button type="submit" class="login">Save</button>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-lg-12 col-xl-12 mt-3">
                            <table class="table table-bordered">

                                <thead>
                                    <tr>
                                        <th scope="col-4">FeeGroup</th>
                                        <th scope="col-4">FeeHead</th>
                                        <th scope="col-4">FeeAmount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>Admission_Fee </td>
                                        <td>200</td> 
                                        <td><a class="btn btn-default" href="#"><i class="fa fa-edit"></i></a> </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>Annual_Charge</td>
                                        <td>100</td>
                                        <td><a class="btn btn-default" href="#"><i class="fa fa-edit"></i></a> </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>Computer_Fee</td>
                                        <td>100</td>
                                        <td><a class="btn btn-default" href="#"><i class="fa fa-edit"></i></a> </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>Medical_Fee</td>
                                        <td>100</td>
                                        <td><a class="btn btn-default" href="#"><i class="fa fa-edit"></i></a> </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end: page -->
    </section>
</div>
