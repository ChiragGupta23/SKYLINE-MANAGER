@model ARH.Models.ResetPassword

<link href="~/css/arch.css" rel="stylesheet" />

<div class="container shadow p-5 col-lg-6">
    <section role="main" class="content-body">
        <!-- start: page -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <header class="card-header d-flex align-items-center justify-content-between">
                        <h2 class="card-title">Reset Password</h2>
                    </header>
                    <br />
                    <form id="afhform" method="post">
                        <div class="row">
                            <div class="col-lg-12 col-xl-12 mt-3">
                                <label class="mb-2">Password</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" asp-for="Password" placeholder="Enter Password" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-xl-12 mt-3">
                                <label class="mb-2">Confirm Password</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" asp-for="ConfirmPassword" placeholder="Enter Your Confirm Password" />
                                </div>
                            </div>
                        </div>
                        <div>
                            <br />
                            <div>
                                <button type="submit" class="login">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- end: page -->
    </section>
</div>

